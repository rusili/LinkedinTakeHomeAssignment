<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/viewholder_event_height"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="@dimen/cardview_default_elevation"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/viewholder_padding_leftright"
            android:paddingRight="@dimen/viewholder_padding_leftright"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/recyclerview_viewholder_event_imageview_group"
                android:layout_width="@dimen/viewholder_image_width"
                android:layout_height="@dimen/viewholder_image_width"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/viewholder_padding_textview_left"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/recyclerview_viewholder_event_textview_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/viewholder_textview_primary_height"
                    android:textSize="@dimen/viewholder_primary_fontsize"
                    android:textColor="@color/Font_primary"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    />
                <TextView
                    android:id="@+id/recyclerview_viewholder_event_textview_locationdate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/viewholder_textview_secondary_height"
                    android:textSize="@dimen/viewholder_secondary_fontsize"
                    android:textColor="@color/Font_secondary"
                    android:gravity="center_vertical"
                    />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>